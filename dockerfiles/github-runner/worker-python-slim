FROM python:slim-buster

ARG GITHUB_RUNNER_VERSION="2.283.1"

ENV RUNNER_NAME "runner"
ENV GITHUB_PAT ""
ENV GITHUB_OWNER ""
ENV GITHUB_REPOSITORY ""
ENV RUNNER_WORKDIR "_work"
ENV PKENV_ARCH=arm

RUN apt-get update \
    && apt-get install -y \
        curl \
        sudo \
        git \
        jq \
        docker.io \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -m github \
    && usermod -aG sudo github \
    && echo "%sudo ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers \
    && pip install --no-cache-dir ansible \
    && git clone https://github.com/iamhsa/pkenv.git /pkenv \
    && chmod 777 /pkenv \
    && groupadd docker \
    && usermod -aG docker github

USER github
WORKDIR /home/github

RUN curl -Ls https://github.com/actions/runner/releases/download/v${GITHUB_RUNNER_VERSION}/actions-runner-linux-arm64-${GITHUB_RUNNER_VERSION}.tar.gz | tar xz \
    && sudo ./bin/installdependencies.sh

COPY --chown=github:github entrypoint.sh ./entrypoint.sh
RUN sudo chmod u+x ./entrypoint.sh

ENTRYPOINT ["/home/github/entrypoint.sh"]

ENV PATH=/tfenv/bin:$PATH