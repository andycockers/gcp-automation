FROM debian:buster-slim

ARG GITHUB_RUNNER_VERSION="2.283.1"

ENV RUNNER_NAME "runner"
ENV GITHUB_PAT ""
ENV GITHUB_OWNER ""
ENV GITHUB_REPOSITORY ""
ENV RUNNER_WORKDIR "_work"
ENV TFENV_ARCH=arm

RUN apt-get update \
    && apt-get install -y \
        curl \
        sudo \
        git \
        jq \
        wget \
        git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -m github \
    && usermod -aG sudo github \
    && echo "%sudo ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers \
    && wget https://golang.org/dl/go1.16.7.linux-arm64.tar.gz \
    && tar xvf go1.16.7.linux-arm64.tar.gz \
    && rm go1.16.7.linux-arm64.tar.gz \
    && git clone https://github.com/tfutils/tfenv.git /tfenv \
    && chmod 777 /tfenv

USER github
WORKDIR /home/github

RUN curl -Ls https://github.com/actions/runner/releases/download/v${GITHUB_RUNNER_VERSION}/actions-runner-linux-arm64-${GITHUB_RUNNER_VERSION}.tar.gz | tar xz \
    && sudo ./bin/installdependencies.sh

COPY --chown=github:github entrypoint.sh ./entrypoint.sh
RUN sudo chmod u+x ./entrypoint.sh

ENTRYPOINT ["/home/github/entrypoint.sh"]

ENV PATH=/go/bin:/tfenv/bin:$PATH