{
    "builders": [
        {
            "type": "docker",
            "image": "python:slim-buster",
            "commit": true,
            "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
        }
  ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": "../../shell/apt/install-ansible/install.sh"
        },
        
        {
            "type": "file",
            "source": "../../ansible",
            "destination": "/tmp"
          },

          {
            "type": "shell",
            "scripts": "../../shell/ansible/install-docker-worker-deps-arm.sh"
        },

        {
            "type": "shell",
            "inline": "rm -rf /tmp/ansible && apt-get clean"
        }
    ],

    "post-processors": [
        [
        {
            "type": "docker-tag",
            "repository": "wolfman.crabdance.com/worker-arm-buster",
            "tag": "latest"
        },

        {
            "type": "docker-push",
            "login": false
        }

        
    ]
]



}