{
    "builders": [
        {
            "type": "docker",
            "image": "alpine",
            "discard": true,
            "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
        }
  ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": "../../shell/apk/install-ansible/install.sh"
        },
        
        {
            "type": "file",
            "source": "../../ansible",
            "destination": "/tmp"
          },

          {
            "type": "shell",
            "inline": "cd /tmp/ansible && ansible-playbook --connection=local --inventory=127.0.0.1, install-docker-worker-deps-arm.yml"
        }
    ],

    "post-processors": [
        [
        {
            "type": "docker-tag",
            "repository": "wolfman.crabdance.com/worker-arm-alpine",
            "tag": "latest"
        },

        {
            "type": "docker-push",
            "login": false
        }
    ]
]



}