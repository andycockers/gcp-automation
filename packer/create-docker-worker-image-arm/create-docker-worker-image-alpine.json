{

    "variables": {
        "ansible_host": "default",
        "ansible_connection": "docker",
        "user": "root"
      },

    "builders": [
        {
            "type": "docker",
            "image": "alpine",
            "commit": true,
            "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `user`}}",
        "{{.Image}}",
        "/bin/sh"
      ]
    }
  ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": "../../shell/apk/install-python3/install.sh"
        },
        
        {
            "type": "ansible",
            "playbook_file": "../../ansible/install-docker-worker-deps-arm.yml",
            "extra_arguments": [
                "--extra-vars",
                "ansible_host={{user `user`}} ansible_connection={{user `ansible_connection`}}"
              ]
        }
    ],

    "post-processors": [
        [
        {
            "type": "docker-tag",
            "repository": "wolfman.crabdance.com/worker-arm-alpine",
            "tag": "latest"
        },

        {
            "type": "docker-push",
            "login": false
        }
    ]
]



}