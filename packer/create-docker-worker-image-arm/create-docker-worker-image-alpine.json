{
    "builders": [
        {
            "type": "docker",
            "image": "alpine",
            "commit": true,
            "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"]
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": "../../shell/apk/install-python3/install.sh"
        },

        {
            "type": "shell",
            "scripts": "../../shell/apk/install-sshd/install.sh"
        },

        {
            "type": "ansible",
            "playbook_file": "../../ansible/install-docker-worker-deps-arm.yml",
            "ansible_env_vars": ["ANSIBLE_PYTHON_INTERPRETER=/usr/bin/python3", "ANSIBLE_HOST_KEY_CHECKING=False"]
        }
    ],

    "post-processors": [
        [
        {
            "type": "docker-tag",
            "repository": "wolfman.crabdance.com/worker-arm-alpine",
            "tag": "latest"
        },

        {
            "type": "docker-push",
            "login": false
        }
    ]
]



}